#!/bin/bash
# https://askubuntu.com/questions/156771/run-a-script-only-at-the-very-first-boot

FLAG="/var/log/firstboot.log"
if [ ! -f $FLAG ]; then
   rm /var/local/start.log 
   /var/local/start.sh  | tee /var/local/start.log        # Do stuff that should be done before autologin of first user
   (/var/local/finish.sh | tee -a /var/local/start.log) & # Launch remainder as a background process so econ-ark user can autologin
   
   # create an empty 'signal' file so the if will fail after the first boot
   touch "$FLAG"
fi
